@model SaFarHub.Models.User


@{
    ViewBag.Title = "Register | SaFar-Hub";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>


    * {
        margin: 0;
        padding: 0;
    }

    .container {
        margin-top: 90px;
    }

    .left-content {
        background-color: #1B1931;
        padding: 50px;
        min-height: 100vh;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .right-content {
        background-image: url('/Images/back33.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        padding: 50px;
        min-height: 100vh;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }


    .form-container {
        max-width: 500px;
        margin: 0 auto;
    }

    .signup-heading {
        text-align: left;
        margin-bottom: 30px;
    }

    .profile-logo-container {
        position: relative;
        width: 100px;
        height: 100px;
        margin: 0 auto;
    }
  
    .display-4 {
        color: #f8f9fa;
        font-family: 'Bodoni MT';
    }

    .lead {
        color: #f8f9fa;
    }

    .lead2 {
        color: #f8f9fa;
    }

    /* Style the profile logo image */
    #profile-logo {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        cursor: pointer;
    }


    /* Style the image icon */
    .image-icon {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 30px;
        height: 30px;
        align-content: center;
        border-radius: 50%;
        cursor: pointer;
        display: none;
    }

        .image-icon .bi {
            color: violet;
            font-size: 25px;
        }

    /* Show the image icon when hovering over the profile logo container */
    .profile-logo-container:hover .image-icon {
        display: block;
    }
    body {
        background-image: url('/Images/back12.jpg');
        background-size: cover;
        background-repeat: no-repeat;
    }
    .signup-heading{
        color:snow;
    
    }
    .login-link{
        color:snow;
    }
    .login-link2{
        width:100px;
        color:snow;
    }

</style>

<div class="container">
    <div class="row">
        <div class="col-lg-6 left-content">
            <br /><br /><br /><br /><br /><br /><br /><br />
            <h1 class="display-4 mb-4">Welcome to SaFar_Hub!</h1>
            <p class="lead">Discover the world with SaFar-Hub, a platform that connects travelers with unique experiences and local guides.</p>
            <p class="lead2">Join our community and start exploring new destinations, making connections, and creating memorable experiences.</p>
            <p class="lead2">Sign up today and embark on your next adventure!</p>
        </div>
        <div class="col-lg-6 right-content">
            <div class="form-container">
                @using (Html.BeginForm("Index", "User", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    <!--<h1 class="signup-heading"><b>Signup</b></h1>-->
                    <br /><br /><br /><br /><br /><br /><br /><br />


                    <div class="form-group mb-3">
                        <div class="profile-logo-container">
                            <label for="ImageFile" class="profile-logo-label">
                                <img id="profile-logo" src="~/Images/defaultProfilePicture.png" alt="Profile Logo" class="profile-logo">
                                <input type="file" id="ImageFile" name="ImageFile" accept="image/*" style="display: none;">
                                <div class="image-icon">
                                    <i class="bi bi-image-fill"></i>
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        @Html.TextBoxFor(model => model.firstName, new { @class = "form-control", placeholder = "First Name", required = "required" })
                        <div class="invalid-feedback">Please enter your first name.</div>
                    </div>

                    <div class="form-group mb-3">
                        @Html.TextBoxFor(model => model.lastName, new { @class = "form-control", placeholder = "Last Name", required = "required" })
                        <div class="invalid-feedback">Please enter your last name.</div>
                    </div>

                    <div class="form-group mb-3">
                        @Html.TextBoxFor(model => model.username, new { @class = "form-control", placeholder = "Username", required = "required" })
                        <div class="invalid-feedback">Please enter a username.</div>
                    </div>

                    <div class="form-group mb-3">
                        @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "Enter Your Email", type = "email", required = "required" })
                        <div class="invalid-feedback">Please enter a valid email address.</div>
                    </div>

                    <div class="form-group mb-3">
                        @Html.PasswordFor(model => model.password, new { @class = "form-control", placeholder = "Password", required = "required" })
                        <div class="invalid-feedback">Please enter a password.</div>
                    </div>

                    <div class="form-group mb-3">
                        <input type="submit" value="Signup" class="btn btn-primary btn-lg">
                    </div>

                    <div class="form-group">
                        <p class="login-link" style="font-size:20;">
                            <b>Already have an account?</b>
                            @Html.ActionLink("Login", "Login", "User", null, new { @style = "color: blue;text-decoration: none;" })
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    var fileSelectionTriggered = false;

    function displayProfileLogo() {
        var input = document.getElementById('ImageFile');
        var reader = new FileReader();

        reader.onload = function (e) {
            document.getElementById('profile-logo').src = e.target.result;
        };

        reader.readAsDataURL(input.files[0]);
    }

    document.getElementById('profile-logo');

    document.getElementById('ImageFile').addEventListener('change', function () {
        displayProfileLogo();
    }, false);

    document.getElementById('ImageFile').addEventListener('blur', function () {
        fileSelectionTriggered = false;
    });
</script>
